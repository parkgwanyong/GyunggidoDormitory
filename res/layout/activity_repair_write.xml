<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.prototype.RepairWriteActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/repair_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/repair_write_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Title"
                android:padding="8dp"
                android:textSize="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <EditText
                android:minHeight="150dp"
                android:id="@+id/repair_write_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Contents"
                android:padding="8dp"
                android:textSize="15dp" />

            <!--android.support.v7.widget.RecyclerView
                android:id="@+id/repair_write_comments_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/users_appBar"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="4"
                    android:id="@+id/repair_write_comments_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="comments"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="15dp" />
                <Button
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:background="#385194"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="submit"/>
            </LinearLayout-->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
